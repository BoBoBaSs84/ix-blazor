    id="@Id" 
    breakpoints="@(JsonSerializer.Serialize(Breakpoints).Replace('"', '\''))" 
    force-breakpoint="@ForceBreakpoint" 
    theme="@Theme" 
    theme-system-appearance="@ThemeSystemAppearance">
