                     style="@Style"
                     application-name="@ApplicationName"
                     hide-header="@HideHeader"
                     force-breakpoint="@(ForceBreakpoint == null ? string.Empty :  EnumParser<Breakpoint>.ParseEnumToString(ForceBreakpoint))">
    @ChildContent
</ix-basic-navigation>
