@namespace SiemensIXBlazor.Components
@inherits IXBaseComponent
@using SiemensIXBlazor.Enums.Button;
@using SiemensIXBlazor.Helpers

<ix-button @onclick="Clicked"
@attributes="UserAttributes"
style="@Style"
class="@Class"
id="@Id"
disabled="@Disabled" 
ghost="@Ghost" 
outline="@Outline" 
selected="@Selected"
type="@(EnumParser<ButtonType>.ParseEnumToString(Type))"
variant="@(EnumParser<ButtonVariant>.ParseEnumToString(Variant))"
data-toggle="@DataToggle"
data-tooltip="@DataTooltip">
    @ChildContent
</ix-button>
