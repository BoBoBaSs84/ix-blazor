@namespace SiemensIXBlazor.Components
@inherits IXBaseComponent
@using SiemensIXBlazor.Enums.Button;
@using SiemensIXBlazor.Helpers

<ix-button @onclick="Clicked"
@attributes="UserAttributes"
style="@Style"
class="@Class"
id="@Id"
disabled="@Disabled" 
ghost="@Ghost" 
outline="@Outline" 
selected="@Selected"
type="@((Type != null) ? EnumParser<ButtonType>.ParseEnumToString(Type) : "button"))"
variant="@((Variant != null) ? EnumParser<ButtonVariant>.ParseEnumToString(Variant) : "primary"))"
data-toggle="@DataToggle"
data-tooltip="@DataTooltip">
    @ChildContent
</ix-button>
