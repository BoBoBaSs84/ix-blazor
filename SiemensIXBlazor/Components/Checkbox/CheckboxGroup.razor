@using Microsoft.JSInterop;
@using SiemensIXBlazor.Components
@inherits IXBaseComponent
@inject IJSRuntime JSRuntime
@namespace SiemensIXBlazor.Components.Checkbox

<!-- Checkbox'ları gruplamak için Siemens IX web component'i -->
<!-- CascadingValue ile child component'lara kendini geçirir -->
<CascadingValue Value="this">
    <ix-checkbox-group @attributes="UserAttributes"
                       class="@Class"
                       style="@Style"
                       id="@Id"
                       label="@Label"
                       info-text="@InfoText"
                       warning-text="@WarningText"
                       invalid-text="@InvalidText"
                       valid-text="@ValidText">
        @ChildContent
    </ix-checkbox-group>
</CascadingValue>