@using Microsoft.JSInterop;
@using SiemensIXBlazor.Enums.Chip;
@using SiemensIXBlazor.Helpers;
@namespace SiemensIXBlazor.Components
@inherits IXBaseComponent
@inject IJSRuntime JSRuntime

<ix-chip
@attributes="UserAttributes"
id="@Id" 
closable="@Closable" 
outline="@Outline" 
active="@Active" 
background="@Background" 
color="@Color" 
icon="@Icon" 
variant="@((Variant != null) ? EnumParser<ChipVariant>.ParseEnumToString(Variant) : "primary")"
style="@Style"
class="@Class">@ChildContent</ix-chip>
