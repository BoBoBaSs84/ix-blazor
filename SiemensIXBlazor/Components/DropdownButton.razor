@using SiemensIXBlazor.Elements;

<ix-dropdown-button label="@Label" 
variant="@Variant" 
icon="@Icon"
active="@Active"
disabled="@Disabled"
ghost="@Ghost"
outline="@Outline">
    @if (DropdownItemElements != null)
    {
        foreach (DropdownItemElement item in DropdownItemElements)
        {
            <ix-dropdown-item label="@item.Label" 
            value="@item.Value"
            @onclick="() => Clicked(item.Label)"></ix-dropdown-item>
        }
    }
</ix-dropdown-button>
