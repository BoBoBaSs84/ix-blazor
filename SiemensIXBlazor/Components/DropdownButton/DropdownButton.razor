@namespace SiemensIXBlazor.Components
@using SiemensIXBlazor.Enums.Button;
@using SiemensIXBlazor.Enums.DropdownButton;
@using SiemensIXBlazor.Helpers;
@inherits IXBaseComponent

<ix-dropdown-button
@attributes="UserAttributes"
label="@Label" 
variant="@(EnumParser<ButtonVariant>.ParseEnumToString(Variant))"
placement="@((Placement != null) ? EnumParser<DropdownButtonPlacement>.ParseEnumToString(Placement)?.Replace('_', '-') : "")"
icon="@Icon"
disabled="@Disabled"
ghost="@Ghost"
outline="@Outline"
style="@Style"
class="@Class">
    @ChildContent
</ix-dropdown-button>
