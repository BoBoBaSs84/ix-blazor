@namespace SiemensIXBlazor.Components
@inherits IXBaseComponent

<ix-event-list @attributes="UserAttributes"
               animated="@Animated.ToString().ToLower()"
               chevron="@Chevron"
               compact="@Compact"
               item-height="@ItemHeight"
               style="@Style"
               class="@Class">
    @if (ChildContent != null)
    {
        @ChildContent
    }
</ix-event-list>
