@namespace SiemensIXBlazor.Components
@using SiemensIXBlazor.Enums.KPI;
@using SiemensIXBlazor.Helpers;
@inherits IXBaseComponent

<ix-kpi
@attributes="UserAttributes"
label="@Label" 
value="@Value"
orientation="@((Orientation != null) ? EnumParser<KpiOrientation>.ParseEnumToString(Orientation) : "horizontal")"
state="@((State != null) ? EnumParser<KpiState>.ParseEnumToString(State) : "neutral")"
onreadystatechange="@State"
unit="@Unit"
style="@Style"
class="@Class"></ix-kpi>
