@namespace SiemensIXBlazor.Components
@using SiemensIXBlazor.Enums.Pill;
@using SiemensIXBlazor.Helpers;
@inherits IXBaseComponent

<ix-pill
         @attributes="UserAttributes"
         variant="@((Variant != null) ? EnumParser<PillVariant>.ParseEnumToString(Variant) : "primary")"
         color="@Color"
         background="@Background"
         align-lef="@AllignLeft"
         icon="@Icon"
         outline="@Outline"
         style="@Style"
         class="@Class">
    @ChildContent
</ix-pill>

