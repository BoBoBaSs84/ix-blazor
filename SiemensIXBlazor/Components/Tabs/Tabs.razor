@using Microsoft.JSInterop;
@using SiemensIXBlazor.Enums.Tabs;
@using SiemensIXBlazor.Helpers;
@inject IJSRuntime JSRuntime
@namespace SiemensIXBlazor.Components
@inherits IXBaseComponent

<ix-tabs
@attributes="UserAttributes"
id="@Id" 
layout="@((Layout != null) ? EnumParser<TabsLayout>.ParseEnumToString(Layout) : "auto")" 
placement="@((Placement != null) ? EnumParser<TabsPlacement>.ParseEnumToString(Placement) : "bottom")" 
rounded="@Rounded" 
selected="@Selected" 
small="@Small"
style="@Style"
class="@Class">
    @ChildContent
</ix-tabs>
