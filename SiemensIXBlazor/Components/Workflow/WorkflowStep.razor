@namespace SiemensIXBlazor.Components
@using SiemensIXBlazor.Enums.Workflow;
@using SiemensIXBlazor.Helpers;
@inherits IXBaseComponent

<ix-workflow-step
@attributes="UserAttributes"
style="@Style"
class="@Class"
status="@((Status != null) ? EnumParser<WorkflowStatus>.ParseEnumToString(Status) : "open")" 
clickable="@Clickable"
disabled="@Disabled"
position="@((Position != null) ? EnumParser<WorkflowPosition>.ParseEnumToString(Position) : "undefined")"
selected="@Selected"
vertical="@Vertical">
    @ChildContent
</ix-workflow-step>
